
{
  "entities": {
    "Doctor": {
      "title": "Doctor",
      "description": "Represents a doctor's profile.",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the doctor." },
        "order": { "type": "number", "description": "Display order of the doctor." },
        "name": { "type": "string", "description": "The full name of the doctor." },
        "frontSideCode": { "type": "string", "description": "HTML code for the front side of the doctor card." },
        "backSideCode": { "type": "string", "description": "HTML code for the back side of the doctor card." },
        "languages": { "type": "array", "items": { "type": "string" }, "description": "Languages spoken by the doctor." },
        "hidden": { "type": "boolean", "description": "Whether the doctor card is hidden." }
      },
      "required": ["id", "name", "order", "frontSideCode", "backSideCode"]
    },
    "StaffMember": {
      "title": "Staff Member",
      "description": "Represents a practice staff member's profile.",
      "type": "object",
      "properties": {
        "id": { "type": "string", "description": "Unique identifier for the staff member." },
        "order": { "type": "number", "description": "Display order of the staff member." },
        "name": { "type": "string", "description": "The full name of the staff member." },
        "role": { "type": "string", "description": "The primary role of the staff member." },
        "role2": { "type": "string", "description": "An optional secondary role." },
        "imageUrl": { "type": "string", "description": "URL of the staff member's portrait image." },
        "backsideContent": { "type": "string", "description": "HTML or text content for the card's flip side." },
        "languages": { "type": "array", "items": { "type": "string" }, "description": "Languages spoken by the staff member." },
        "hidden": { "type": "boolean", "description": "Whether the staff member card is hidden." },
        "fullWidth": { "type": "boolean", "description": "Whether the card should span the full width of the grid." }
      },
      "required": ["id", "order", "name", "role", "imageUrl"]
    },
    "MedicalPartner": {
      "title": "Medical Partner",
      "description": "Represents a medical cooperation partner.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "order": { "type": "number" },
        "name": { "type": "string" },
        "websiteUrl": { "type": "string" },
        "logoHtml": { "type": "string", "description": "The complete HTML string for the logo to be rendered." },
        "imageUrl": { "type": "string", "description": "The URL to the raw logo image file for editing purposes." },
        "logoScale": { "type": "number", "description": "Logo size percentage." },
        "logoX": { "type": "number", "description": "Logo horizontal offset." },
        "logoY": { "type": "number", "description": "Logo vertical offset." },
        "openInNewTab": { "type": "boolean" },
        "hidden": { "type": "boolean" }
      },
      "required": ["id", "order", "name", "websiteUrl", "logoHtml"]
    },
    "OtherPartner": {
      "title": "Other Partner",
      "description": "Represents another (non-medical) cooperation partner.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "order": { "type": "number" },
        "name": { "type": "string" },
        "websiteUrl": { "type": "string" },
        "logoHtml": { "type": "string", "description": "The complete HTML string for the logo to be rendered." },
        "imageUrl": { "type": "string", "description": "The URL to the raw logo image file for editing purposes." },
        "logoScale": { "type": "number", "description": "Logo size percentage." },
        "logoX": { "type": "number", "description": "Logo horizontal offset." },
        "logoY": { "type": "number", "description": "Logo vertical offset." },
        "openInNewTab": { "type": "boolean" },
        "hidden": { "type": "boolean" }
      },
      "required": ["id", "order", "name", "websiteUrl", "logoHtml"]
    },
    "Holiday": {
        "title": "Holiday",
        "description": "Represents a practice holiday period.",
        "type": "object",
        "properties": {
            "id": { "type": "string", "description": "Unique identifier for the holiday period." },
            "name": { "type": "string", "description": "Name of the holiday (e.g., Summer Break)." },
            "start": { "type": "string", "format": "date-time", "description": "Start date of the holiday." },
            "end": { "type": "string", "format": "date-time", "description": "End date of the holiday." }
        },
        "required": ["id", "name", "start", "end"]
    },
    "InfoBanner": {
      "title": "Info Banner",
      "description": "Represents a single custom blue info banner.",
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "text": { "type": "string" },
        "start": { "type": "string", "format": "date-time" },
        "end": { "type": "string", "format": "date-time" },
        "separatorStyle": { "type": "string", "enum": ["diamonds", "spaces", "equals", "dashes", "plus", "asterisks"] }
      },
      "required": ["id", "text"]
    },
    "BannerSettings": {
      "title": "Banner Settings",
      "description": "Stores all settings for the holiday banners.",
      "type": "object",
      "properties": {
        "preHolidayDays": { "type": "number", "description": "How many days before a holiday the announcement banner should appear." },
        "yellowBannerText": { "type": "string", "description": "Text for the holiday announcement (yellow) banner." },
        "redBannerText": { "type": "string", "description": "Text for the during-holiday (red) banner." },
        "yellowBannerSeparatorStyle": { "type": "string", "enum": ["diamonds", "spaces", "equals", "dashes", "plus", "asterisks"] },
        "redBannerSeparatorStyle": { "type": "string", "enum": ["diamonds", "spaces", "equals", "dashes", "plus", "asterisks"] }
      },
      "required": ["preHolidayDays", "yellowBannerText", "redBannerText"]
    }
  },
  "auth": {
    "providers": ["password"]
  },
  "firestore": {
    "doctors": {
      "schema": { "$ref": "#/entities/Doctor" },
      "description": "Stores doctor profile information."
    },
    "staff": {
      "schema": { "$ref": "#/entities/StaffMember" },
      "description": "Stores practice staff member profiles."
    },
    "medicalPartners": {
      "schema": { "$ref": "#/entities/MedicalPartner" },
      "description": "Stores medical cooperation partner information."
    },
    "otherPartners": {
      "schema": { "$ref": "#/entities/OtherPartner" },
      "description": "Stores other cooperation partner information."
    },
    "holidays": {
        "schema": { "$ref": "#/entities/Holiday" },
        "description": "Stores practice holiday periods."
    },
    "infoBanners": {
      "schema": { "$ref": "#/entities/InfoBanner" },
      "description": "Stores multiple custom info banners (blue)."
    },
    "settings/banners": {
        "schema": { "$ref": "#/entities/BannerSettings" },
        "description": "A single document that stores all settings for the yellow and red holiday banners."
    }
  }
}
