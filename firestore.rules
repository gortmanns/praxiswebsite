/**
 * @fileoverview Firestore Security Rules for the application.
 *
 * Core Philosophy:
 * This ruleset enforces a user-ownership model for user profiles,
 * while allowing public read access to doctors and holidays.  Write
 * access to doctors and holidays is disallowed.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile data, accessible only to the user.
 * - /holidays/{holidayId}: Stores holiday information, publicly readable but not writable.
 * - /doctors/{doctorId}: Stores doctor information, publicly readable but not writable.
 *
 * Key Security Decisions:
 * - User listing is disallowed.
 * - Doctors and Holidays are considered public read-only data.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Manages access to user profile documents.
     * @path /users/{userId}
     * @allow (create) - A user can create their own profile if the UID matches the document ID.
     * @allow (get, list, update, delete) - A user can only access their own profile data.
     * @deny (create) - A user cannot create a profile with an ID that doesn't match their UID.
     * @principle Enforces document ownership and restricts access to a user's own data.
     */
    match /users/{userId} {
      function isSignedIn() {
        return request.auth != null;
      }

      function isOwner(userId) {
        return request.auth.uid == userId;
      }

      allow get: if isSignedIn() && isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSignedIn() && isOwner(userId);
      allow delete: if isSignedIn() && isOwner(userId);
    }

    /**
     * @description Manages access to holiday documents.
     * @path /holidays/{holidayId}
     * @allow (get, list) - All users can read holiday information.
     * @deny (create, update, delete) - No users can create, update, or delete holiday information.
     */
    match /holidays/{holidayId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Manages access to doctor documents.
     * @path /doctors/{doctorId}
     * @allow (get, list) - All users can read doctor information.
     * @deny (create, update, delete) - No users can create, update, or delete doctor information.
     */
    match /doctors/{doctorId} {
      allow get: if true;
      allow list: if true;
      allow create: if false;
      allow update: if false;
      allow delete: if false;
    }
  }
}