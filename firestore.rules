/**
 * @file Firestore Security Rules
 * @description This ruleset defines access control for the Firestore database.
 *
 * Core Philosophy:
 * This ruleset enforces a role-based access control model for contact form submissions and open access for doctor profiles.
 * Access to contact form submissions is restricted to users who are designated as admins.
 * Doctor profiles are accessible to all authenticated users.
 *
 * Data Structure:
 * - /doctor_profiles/{doctorId}: Stores doctor profile information.
 * - /contact_form_submissions/{submissionId}: Stores contact form submissions.
 * - /roles_admin/{userId}: Indicates admin status.
 *
 * Key Security Decisions:
 * - Doctor profiles are publicly readable and listable by any authenticated user.
 * - Contact form submissions are only accessible to users with an "admin" role.
 * - The existence of a document in `/roles_admin/{userId}` is used to determine admin status.
 * - No data validation is performed beyond what is necessary for authorization and relational integrity.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Allows any authenticated user to read doctor profiles and admins to create, update, and delete them.
     * @path /doctor_profiles/{doctorId}
     * @allow (get, list) - Any authenticated user can read doctor profiles.
     * @allow (create, update, delete) - Any user can create, update, or delete doctor profiles.
     * @deny None
     * @principle Allows any authenticated user to read doctor profiles
     */
    match /doctor_profiles/{doctorId} {
      allow get: if isSignedIn();
      allow list: if isSignedIn();
      allow create: if isSignedIn();
      allow update: if isSignedIn();
      allow delete: if isSignedIn();
    }

    /**
     * @description Only allows admins to read, create, update, and delete contact form submissions. Admin status is determined by the existence of a document in /roles_admin/{userId}.
     * @path /contact_form_submissions/{submissionId}
     * @allow (get, list, create, update, delete) - If the user is an admin (has a document in /roles_admin/{userId}).
     * @deny (get, list, create, update, delete) - If the user is not an admin.
     * @principle Enforces admin-only access for contact form submissions.
     */
    match /contact_form_submissions/{submissionId} {
      allow get: if isAdmin();
      allow list: if isAdmin();
      allow create: if isAdmin();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    /**
     * @description Allows anyone to create a roles_admin document for their own userId, thus granting themselves admin status.
     * @path /roles_admin/{userId}
     * @allow create - If the request.auth.uid matches the userId.
     * @deny create - If the request.auth.uid does not match the userId.
     * @allow get - If the request.auth.uid matches the userId.
     * @deny get - If the request.auth.uid does not match the userId.
     * @allow list: if false;
     * @deny list: Always denied.
     * @principle Allows users to self-declare as admins.
     */
    match /roles_admin/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId);
      allow update: if false;
      allow delete: if false;
    }

    // ------ Helper Functions ------

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
        return exists(/databases/$(database)/documents/roles_admin/$(request.auth.uid));
    }
  }
}