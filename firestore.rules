rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow admins to manage all documents within the 'holidays' collection
    match /holidays/{holidayId} {
      allow get, write: if request.auth != null;
    }
    // Explicitly allow admins to list the 'holidays' collection
    match /holidays {
      allow list: if request.auth != null;
    }

    // Allow admins to manage all documents within the 'doctors' collection
    match /doctors/{doctorId} {
      allow get, write: if request.auth != null;
    }
    // Explicitly allow admins to list the 'doctors' collection
    match /doctors {
      allow list: if request.auth != null;
    }

  }
}
